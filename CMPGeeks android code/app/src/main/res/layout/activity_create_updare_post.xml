<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/offgray"
    tools:context=".CreateUpdateActivity.CreateUpdatePost">

    <Button
        android:id="@+id/create_post_button"
        style="@style/Buttonspui"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="32dp"
        android:enabled="false"
        android:text="@string/creat" />

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="400dp"
        android:background="@drawable/background"
        android:layout_margin="16dp"
        android:backgroundTint="@color/white"
        />

    <EditText
        android:id="@+id/create_post_edittext"
        android:layout_width="match_parent"
        android:layout_height="360dp"
        android:layout_alignParentTop="true"
        android:autoLink="web"
        android:gravity="start"
        android:layout_margin="40dp"
        android:hint="@string/start_writing_post"
        android:inputType="textImeMultiLine"
        android:background="@drawable/background"
        android:backgroundTint="@color/white"/>

</RelativeLayout>