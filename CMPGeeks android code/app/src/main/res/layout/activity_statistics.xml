<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".StatisticsActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="16dp">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/number_student"
            android:layout_marginTop="4dp"
            android:hint="Hint..."/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/number_courses"
            android:layout_marginTop="20dp"
            android:layout_below="@id/number_student"
            android:hint="Hint..."/>
        <TextView
            android:hint="Hint..."
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/number_project"
            android:layout_marginTop="20dp"
            android:layout_below="@id/number_courses"/>
        <TextView
            android:hint="Hint..."
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/number_doctors"
            android:layout_marginTop="20dp"
            android:layout_below="@id/number_project"/>
        <TextView
            android:hint="Hint..."
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/number_ta"
            android:layout_marginTop="20dp"
            android:layout_below="@id/number_doctors"/>

        <TextView
            android:hint="Hint..."
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/number_assignment"
            android:layout_marginTop="20dp"
            android:layout_below="@id/number_ta"/>
        <TextView
            android:hint="Hint..."
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/number_teams"
            android:layout_marginTop="20dp"
            android:layout_below="@id/number_assignment"/>
        <TextView
            android:hint="Hint..."
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/number_teachers_in_course"
            android:layout_marginTop="20dp"
            android:layout_below="@id/number_teams"/>

    </RelativeLayout>
</ScrollView>